      <div class="modal-body">

      <form action="/mentor/update" method="POST">

        <div class="form-group">
            <h3>Email:</h3>
            <input class="form-input" value="{{user.email}}" name="email">
        </div>

        <hr>

        <div class="form-group">
            <h3>Availability:</h3>
                <select class="form-control input-lg form-input" name="availability">
